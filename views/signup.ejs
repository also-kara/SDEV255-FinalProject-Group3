<%- include('./templates/header.ejs') %>

<section class="container-lg my-5">

    <div class="row align-items-center justify-content-center">
        <div class="" style="max-width: 600px;">
            <div class="card">

                <div class="card-body">
                    <h5 class="card-title card-header">Log In</h5>
                    
                    <!-- Email -->
                    <div class="input-group p-4 pb-0">
                        <span class="input-group-text">Email Address</span>
                        <input type="text" 
                        class="form-control" 
                        aria-label="Sizing example input" 
                        aria-describedby="inputGroup-sizing-default"
                        required>
                    </div>

                    <!-- Name -->
                    <div class="input-group p-4">
                        <span class="input-group-text">Full Name</span>
                        <input type="password" 
                        class="form-control" 
                        aria-label="Sizing example input" 
                        aria-describedby="inputGroup-sizing-default"
                        required>
                    </div>
                    
                    <!-- Password -->
                    <div class="input-group p-4 pb-0">
                        <span class="input-group-text">Password</span>
                        <input type="text" 
                        class="form-control" 
                        aria-label="Sizing example input" 
                        aria-describedby="inputGroup-sizing-default"
                        required>
                    </div>

                    <!-- Confirm Password -->
                    <div class="input-group p-4">
                        <span class="input-group-text">Confirm Password</span>
                        <input type="password" 
                        class="form-control" 
                        aria-label="Sizing example input" 
                        aria-describedby="inputGroup-sizing-default"
                        required>
                    </div>

                    <button type="button" class="mx-4 btn btn-outline-success">Sign Up</button>
        
                    <div class="content redirect p-4">
                        <p>Already have an account?<br>
                        <a href="/login">Log in <strong>here</strong>.</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<%- include('./templates/footer.ejs') %>