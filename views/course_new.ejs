<%- include('./templates/header.ejs') %>
<!-- Body -->

   <section class="container-md mt-5">
        <div class="row align-items-center justify-content-center">
            
            <div class="card" style="width: 100rem;">

                <div class="card-body">
                    <h5 class="card-title card-header">Add New Course</h5>

<br/>
<form>
  
  <!-- Course name input -->
  <div class="form-outline mb-4">
    <input type="text" id="coursename" class="form-control" />
    <label class="form-label" for="coursename">Course Name</label>
  </div>

  <!-- Description input -->
  <div class="form-outline mb-4">
    <textarea class="form-control" id="description" rows="4"></textarea>
    <label class="form-label" for="description">Course Description</label>
  </div>
  

  <!-- 2 column grid layout with course name and number of credits -->
  <div class="row mb-4">
    <div class="col">
      <div class="form-outline">
        <input type="text" id="subject" class="form-control" />
        <label class="form-label" for="subject">Subject Area</label>
      </div>
    </div>
  <!-- Number of Credits input -->
  <div class="col">
    <input type="number" id="credits" class="form-control" />
    <label class="form-label" for="credits">Number of Credits</label>
  </div>
  </div>

  <!-- Submit button -->
  <button type="submit" class="btn btn-outline-success">Add Course</button>
</form>
                  
  </div>
</div>
</section>
  
<!-- Body -->
<%- include('./templates/footer.ejs') %>