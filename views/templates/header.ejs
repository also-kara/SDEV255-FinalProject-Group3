<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Team3 University</title>
    <!-- Fav Icon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
    <!-- Stylesheets -->
    <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" 
    rel="stylesheet" 
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" 
    crossorigin="anonymous"
    >
    
    <link rel="stylesheet" href="/stylesheets/appstyle.css">
</head>

<body>
    <nav class="navbar navbar-expand-md p-4" data-bs-theme="dark"> 
        <div class="container-xxl">

            <!-- Brand Name -->
            <a href="/" class="navbar-brand">
                <span class="text-white fw-bold display-5">Team3 University</span>
            </a> 

            <!-- Dropdown Menu -->
            <button 
                class="navbar-toggler" 
                type="button" 
                data-bs-toggle="collapse" 
                data-bs-target="#navbarSupportedContent" 
                aria-controls="navbarSupportedContent" 
                aria-expanded="false" 
                aria-label="Toggle navigation"
                >
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse justify-content-end align-center" 
            id="navbarSupportedContent">
                <ul class="navbar-nav">

                    <% if (user) { %>

                        <li class="nav-item">
                            <a class="nav-link" href="/">
                                Welcome, <%= user.name %>
                            </a>
                        </li>

                        <% if (user.instructor) { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/course/add">
                                    Add Course
                                </a>
                            </li>
                        <% } %>

                        <li class="nav-item">
                            <a class="nav-link" href="/auth/logout">
                                Logout
                            </a>
                        </li>

                    <% } else { %>

                    <li class="nav-item">
                        <a class="nav-link" href="/auth/signup">
                            Sign Up
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/auth/login">
                            Login
                        </a>
                    </li>

                    <% } %>
                           

                





                </ul>
            </div>
        </div>
    </nav>

